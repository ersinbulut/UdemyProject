@model CreateServiceDto
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="mdl-card mdl-shadow--2dp employer-form" action="#">
    <div class="mdl-card__title">
        <h2>Hizmet Ekleme Formu</h2>
        <div class="mdl-card__subtitle">Lütfen formu doldurun</div>
    </div>

    <div class="mdl-card__supporting-text">
        <form method="post" class="form">
            <div class="form__article">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label is-dirty is-upgraded" data-upgraded=",MaterialTextfield">
                        <input class="mdl-textfield__input" type="text" asp-for="ServiceIcon" value="">
                        <label class="mdl-textfield__label" for="firstName">Hizmet İkonu</label>
                        <span asp-validation-for="ServiceIcon" class="text-danger"></span>
                    </div>

                    <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label is-dirty is-upgraded" data-upgraded=",MaterialTextfield">
                        <input class="mdl-textfield__input" type="text" asp-for="Title" value="">
                        <label class="mdl-textfield__label" for="secondName">Hizmet Başlığı</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--6-col mdl-textfield mdl-js-textfield mdl-textfield--floating-label is-dirty is-upgraded" data-upgraded=",MaterialTextfield">
                        <input class="mdl-textfield__input" type="text" asp-for="Description" value="">
                        <label class="mdl-textfield__label" for="firstName">Açıklama</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form__action" style="float:right;">
                    <button id="submit_button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" data-upgraded=",MaterialButton">
                        Ekle
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

