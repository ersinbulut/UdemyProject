@model CreateNewUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/png" href="images/DB_16х16.png">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="A front-end template that helps you build fast, modern mobile web apps.">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Otel Kayıt Paneli </title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">


    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Material Design Lite">


    <!-- Tile icon for Win8 (144x144 + tile color) -->
    <meta name="msapplication-TileImage" content="images/touch/ms-touch-icon-144x144-precomposed.png">
    <meta name="msapplication-TileColor" content="#3372DF">

    <!-- SEO: If your mobile URL is different from the desktop URL, add a canonical link to the desktop page https://developers.google.com/webmasters/smartphone-sites/feature-phones -->
    <!--
    <link rel="canonical" href="http://www.example.com/">
    -->

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300,100,700,900' rel='stylesheet'
          type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- inject:css -->
    <link rel="stylesheet" href="~/admin/dist/css/lib/getmdl-select.min.css">
    <link rel="stylesheet" href="~/admin/dist/css/lib/nv.d3.min.css">
    <link rel="stylesheet" href="~/admin/dist/css/application.min.css">
    <!-- endinject -->

</head>
<body>

    <div class="mdl-layout mdl-js-layout color--gray is-small-screen login">
        <main class="mdl-layout__content">
            <div class="mdl-card mdl-card__login mdl-shadow--2dp">
                <div class="mdl-card__supporting-text color--dark-gray">
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                            <span class="mdl-card__title-text text-color--smooth-gray">Otel Kayıt Paneli</span>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                            <span class="login-name text-color--white">Kayıt Ol</span>
                        </div>
                        <form method="post">
                            <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Name">
                                    <label class="mdl-textfield__label" for="name">Adınız</label>
                                    <span asp-validation-for="Name" class="text-warning"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Surname">
                                    <label class="mdl-textfield__label" for="name">Soyadınız</label>
                                    <span asp-validation-for="Surname" class="text-warning"></span>
                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Username">
                                    <label class="mdl-textfield__label" for="name">Kullanıcı Adınız</label>
                                    <span asp-validation-for="Username" class="text-warning"></span>
                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Mail">
                                    <label class="mdl-textfield__label" for="name">Mail Adresiniz</label>
                                    <span asp-validation-for="Mail" class="text-warning"></span>
                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Password">
                                    <label class="mdl-textfield__label" for="name">Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-warning"></span>
                                </div>

                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="ConfirmPassword">
                                    <label class="mdl-textfield__label" for="name">Şifre Tekrar</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                                </div>


                                <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect checkbox--colored-light-blue checkbox--inline" for="checkbox-1">
                                    <input type="checkbox" id="checkbox-1" class="mdl-checkbox__input" checked>

                                </label>
                                <span class="login-link">Tüm ifadelere katılıyorum <a href="#" class="underlined">hizmet şartları</a></span>
                            </div>
                     
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone submit-cell">
                            <a href="login.html" class="login-link">Ben zaten kaydoldum</a>
                            <div class="mdl-layout-spacer"></div>
                                <button class="mdl-button mdl-js-button mdl-button--raised color--light-blue">
                                   Kayıt Ol
                                </button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- inject:js -->
    <script src="~/admin/dist/js/d3.min.js"></script>
    <script src="~/admin/dist/js/getmdl-select.min.js"></script>
    <script src="~/admin/dist/js/material.min.js"></script>
    <script src="~/admin/dist/js/nv.d3.min.js"></script>
    <script src="~/admin/dist/js/layout/layout.min.js"></script>
    <script src="~/admin/dist/js/scroll/scroll.min.js"></script>
    <script src="~/admin/dist/js/widgets/charts/discreteBarChart.min.js"></script>
    <script src="~/admin/dist/js/widgets/charts/linePlusBarChart.min.js"></script>
    <script src="~/admin/dist/js/widgets/charts/stackedBarChart.min.js"></script>
    <script src="~/admin/dist/js/widgets/employer-form/employer-form.min.js"></script>
    <script src="~/admin/dist/js/widgets/line-chart/line-charts-nvd3.min.js"></script>
    <script src="~/admin/dist/js/widgets/map/maps.min.js"></script>
    <script src="~/admin/dist/js/widgets/pie-chart/pie-charts-nvd3.min.js"></script>
    <script src="~/admin/dist/js/widgets/table/table.min.js"></script>
    <script src="~/admin/dist/js/widgets/todo/todo.min.js"></script>
    <!-- endinject -->

</body>
</html>