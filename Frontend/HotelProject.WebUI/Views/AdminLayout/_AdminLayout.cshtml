
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Html.PartialAsync("/Views/AdminLayout/HeadPartial.cshtml")
<body>
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header is-small-screen">
        @await Html.PartialAsync("/Views/AdminLayout/HeaderPartial.cshtml")

        <div class="mdl-layout__drawer">
            <header>Api Otel Admin</header>
            <div class="scroll__wrapper" id="scroll__wrapper">
                <div class="scroller" id="scroller">
                    <div class="scroll__container" id="scroll__container">
                        @await Html.PartialAsync("/Views/AdminLayout/NavbarPartial.cshtml")
                    </div>
                </div>
                <div class='scroller__bar' id="scroller__bar"></div>
            </div>
        </div>

        <main class="mdl-layout__content ">

            <div class="mdl-grid ui-tables">

                <div class="mdl-cell mdl-cell--12-col-desktop mdl-cell--12-col-tablet mdl-cell--4-col-phone">
                    <div class="mdl-card mdl-shadow--2dp">
                        <div class="mdl-card__title">
                            <h1 class="mdl-card__title-text"></h1>
                        </div>
                        <div class="mdl-card__supporting-text no-padding">
                          @RenderBody()
                        </div>
                    </div>
                </div>

            </div>
        </main>
    </div>
    @await Html.PartialAsync("/Views/AdminLayout/ScriptPartial.cshtml")
   
</body>
</html>